<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".JourneyDetails"

    >


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintBottom_toTopOf="@+id/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="2dp"
                android:text="Journey Date"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/journeyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/half_lower_semi_round"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_16ssp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="2dp"
                android:text="Destination"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/half_lower_semi_round"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_16ssp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="2dp"
                android:text="Deadweight"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/deadWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/half_lower_semi_round"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/half_semi_round"
                android:backgroundTint="@color/colorPrimaryDark"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="2dp"
                android:text="Drought"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/draught"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/half_lower_semi_round"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/reem"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="#000"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_16ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">

            </View>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/history"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_white"
        android:backgroundTint="@color/colorAccent"
        android:text="See history"
        app:layout_constraintBottom_toTopOf="@+id/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <LinearLayout
        android:id="@+id/edit"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_white"
        android:backgroundTint="@color/yellow"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:textColor="#ffff"
        android:textColorHint="@color/colorPrimary"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>